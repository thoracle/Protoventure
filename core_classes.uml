@startuml
class Game {
  +current_location: Location
  +player: Player
  +factions: List[Faction]
  +start_game()
  +process_command(command: str)
}

class Player {
  +name: str
  +dragon: Dragon
  +inventory: List[Item]
  +faction_standings: Dict[Faction, int]
}

class Dragon {
  +name: str
  +color: str
  +abilities: List[str]
}

class Location {
  +name: str
  +description: str
  +connected_locations: List[Location]
}

class Faction {
  +name: str
  +description: str
  +missions: List[Mission]
}

class Mission {
  +title: str
  +description: str
  +reward: int
  +required_standing: int
  +is_completed: bool
  +complete_mission()
}

class Item {
  +name: str
  +description: str
}

Game "1" -- "1" Player
Game "1" -- "*" Faction
Player "1" -- "1" Dragon
Player "1" -- "*" Item
Faction "1" -- "*" Mission
@enduml
